<p id="notice"><%= notice %></p>

<h1>Listing Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Podcast</th>
      <th>Season</th>
      <th>Episode num</th>
      <th>Title</th>
      <th>Desc</th>
      <th>Duration</th>
      <th>Published date</th>
      <th>Url</th>
      <th>Explicit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.podcast_id %></td>
        <td><%= episode.season %></td>
        <td><%= episode.episode_num %></td>
        <td><%= episode.title %></td>
        <td><%= episode.desc %></td>
        <td><%= episode.duration %></td>
        <td><%= episode.published_date %></td>
        <td><%= episode.url %></td>
        <td><%= episode.explicit %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

