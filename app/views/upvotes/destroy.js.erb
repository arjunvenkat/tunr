$('.upvote_<%= @upvote_id %>')
  .removeClass("fa-thumbs-up")
  .addClass("fa-thumbs-o-up")
  .addClass("not-upvoted")
  .removeClass("upvoted")
  .removeClass("fa-thumbs-up")
  .removeClass("upvote_<%= @upvote_id %>")
  .addClass("upvote_review_<%= @review.id %>");


$('.not-upvoted.upvote_review_<%= @review.id %>').unbind().click(function(){
  $.ajax({
    dataType: "script",
    url: "/upvotes",
    type: "POST",
    data: {
      upvote: {
       user_id: <%= 1 %>,
       review_id: <%= @review.id %>,
      }
    }
  });
});

$('.review_<%= @upvote.review.id  %> .upvote-num').text(<%= @upvote.review.upvoted_count %>);

$('.review_<%= @review.id  %> .user-upvote-num').text("received " + <%= @user.upvoted_count %> + " upvotes");




