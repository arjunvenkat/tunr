body {
  padding-top: 60px;
}

/* Site-wide */

.push-down-4 {
  padding-top: 10em;
}

.push-down-3 {
  padding-top: 6em;
}

.push-down-2 {
  padding-top: 3em;
}

.push-down-1 {
  padding-top: 1em;
}

h1 {
  font-size: 42px;
}

h2 {
  font-size: 34px;
}

h3 {
  font-size: 24px;
}

h4 {
  font-size: 18px;
}

p, li, div {
  font-size: 16px;
}

h1, h2 {
  padding-bottom: 0.5em;
  border-bottom: 1px solid lightgray;
}

.pod-icon {
  width: 32px;
  border-radius: 10%;
}

.big-link a {
  font-size: 3em;
}

a {
  color: rgba(255,140, 0, 0.7);
}


a:hover, a:focus  {
  color: rgba(255,140, 0, 1);
  text-decoration: none;
}

footer {
  padding-top: 2em;
  height: 16em;
}

.mini-link {
  font-size: 18px;
  color: #444;
}

.mini-link:hover, .mini-link:focus {
  color: orange;
  text-decoration: none;
}

hr {
  border-width: 1px;
  border-color: lightgray;
}

img {
  border-radius: 5%;
}

.episode-page-content .review .edit-review-box,
.user-page-content .review .edit-review-box {
  padding-bottom: 0;
  margin-bottom: 0;
}


/* forms */

textarea:focus,
textarea.form-control:focus,
input.form-control:focus,
input[type=text]:focus,
input[type=password]:focus,
input[type=email]:focus,
input[type=number]:focus,
[type=text].form-control:focus,
[type=password].form-control:focus,
[type=email].form-control:focus,
[type=tel].form-control:focus,
[contenteditable].form-control:focus {
 -webkit-box-shadow: inset 0 -2px 0 orange;
 box-shadow: inset 0 -2px 0 orange;
 outline: none;
}

input[type="checkbox"]:checked:after,
.checkbox input[type="checkbox"]:checked:after,
.checkbox-inline input[type="checkbox"]:checked:after {
  background-color: orange;
  border-color: orange;
}

h1 .small {
  font-size: 0.5em;
}

/* Devise form errors*/
#error_explanation h2 {
    font-size: 1.5em;
    border-bottom: none;
}

/* Navbar */

.nav-container {
  margin-left: 15px;
  margin-right: 15px;
}


/* Home */



.jumbotron {
  background: url(<%= asset_path('tweed.png') %>);
}

.jumbotron .logo {
  color: orange;
  text-align: center;
  font-size: 4em;
  border-bottom: none;
  padding-bottom: 0.3em;
}

.jumbotron p {
  text-align: center;
  font-size: 1.4em;
  color: white;
}

.follow-suggestions {

  .heading {
    font-size: 16px;
  }

  .user-info {
    display: inline-block;
    padding-left: 14px;

    h3 {
      margin-top: -14px;
      margin-bottom: 0;
    }
  }

  .following-message {
    color: black;
  }

  .user-list {
    div.user-profile-pic-circular {
      // display: inline-block;
      // background: gray;
      width: 92px;
      height: 92px;
      // background-repeat: no-repeat;
      background-size: 120px;
      // background-position: 80% 50%;
      // border-width: 2px;
      // box-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);
    }
  }
  .users-to-follow {
    padding-top: 24px;

    li {
      padding-bottom: 18px;
      min-height: 180px;
    }
  }
}


.best-of-week {
  max-height: 265px;
  max-width: 100%;
  display: block;
  margin: 0 auto;
}

.ep-teaser {
  min-height: 600px;
}

.ep-teaser .image-container {
  height: 245px;
  vertical-align: bottom;
}

.ep-teaser .teaser-text {
  padding-top: 2em;
  font-size: 16px;
}

// .ep-teaser a {
