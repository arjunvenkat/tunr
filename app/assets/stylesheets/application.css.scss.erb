.rating-container {
  text-align: center;
}

.rating-container div {
  font-size: 1em;
}

.review-list {
  list-style-type: none;
  padding-left: 0;

  div.rating-container-podcast {
    font-size: 14px;
    padding-left: 0;
  }

  p {
    font-size: 16px;
  }

  li {
    padding-bottom: 14px;
  }

  h3 {
    margin-bottom: 0;
  }
}


/* All podcasts */

.ep-list-item {
  padding-bottom: 3em;

  img {
    margin-bottom: 14px;
  }
}

.pagination-container {
  text-align: center;
}

.pagination {
  font-size: 18px;
}

.pagination a {
  padding-left: 5px;
  padding-right: 5px;
}


/* Podcast page */


.podcast-page-heading {
  background-image: url(<%= asset_path('cardboard_flat.png') %>);
  padding-bottom: 5%;
}

.podcast-page-heading img {
  max-width: 50%;
  max-height: 240px;
  display: block;
  margin: 0 auto;
}

.podcast-page-content .desc {
  font-size: 2em;
}

.podcast-page-content h2 {
  font-size: 3em;
}

.podcast-page-content a {
  color: #444;
}

.podcast-page-content a:hover,
.podcast-page-content a:focus {
  color: orange;
  text-decoration: none;
}

.rating-container-big {
  text-align: center;
}

.rating-container-big div {
  font-size: 24px;
}

.orange {
  color: orange;
}

.rating-container-podcast {
  text-align: center;
  display: inline-block;
  padding-left: 0.5em;
  font-size: 0.5em;
}

.rating-container-podcast div {
  font-size: 12px;
}

.podcast-page-content ul {
  list-style-type: none;
  li a {
    font-size: 28px;
  }
}



/* Best episodes */

.best-episodes-content a {
  font-size: 1.5em;
}


.best-episodes-content img {
  max-width: 100%;
  max-height: 400px;
  display: block;
  margin: 0 auto;
}

.best-episodes-content .num {
  font-size: 2.5em;
}

// .best-episodes-content a {
//   color: #444;
// }

.best-episodes-content .row {
  padding-bottom: 1.5em;
}

.rating-container-best div {
  font-size: 16px;
}

