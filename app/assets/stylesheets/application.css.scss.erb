/* Episode page */

.episode-page-content {
  font-size: 2em;
}

.episode-page-content h1 {
  text-align: center;
  border-bottom: none;
}

.episode-page-content .review p {
  font-size: 16px;
  padding-bottom: 32px;
}

i.upvoted, i.not-upvoted {
  cursor: pointer;
}

.upvote-num {
  padding-left: 6px;
}

.user-stats {
  display: inline-block;
}

.user-stats div {
  line-height: 13px;
  font-size: 12px;
  color: gray;
}


/* User page content */

.user-page-content p {
  font-size: 16px;
}

/* alerts and notices */
.alert {
  position: absolute;
  width: 80%;
  left: 10%;
  top: 85px;
  opacity: 0.8;
  background: gray;
}


/* New rating page */

.new-rating-page h3,h4 {
  text-align: center;
}


/* User page */


.tabs {
  list-style-type: none;
  text-align: center;
  // font-size: 32px;
  padding-bottom: 24px;

  li {
    display: inline-block;
    margin-right: 48px;
  }

  li a {
    padding-bottom: 8px;
    box-shadow: none;
    -webkit-box-shadow: none;
    font-size: 28px;
  }

  .active {
    border-bottom: 3px solid rgba(255,140, 0, 0.7);
  }
}

.user-page-heading {
  background-image: url(<%= asset_path 'tweed.png' %>);
  padding-bottom: 3%;
}

.user-page-heading .tagline {
  margin-top: none;
  color: white;
  padding-bottom: 32px;
  font-size: 18px;
}

.user-page-heading h1 {
  font-size: 50px;
  color: orange;
  padding-bottom: 8px;
  border-bottom: none;
  margin-bottom: 0;
}

.user-page-heading h3 {
  font-size: 24px;
  color: white;
  padding-top: 12px;
  padding-bottom: 12px;
}

.user-page-heading span{
  font-size: 20px;
  color: white;
  padding-bottom: 32px;
}



.user-profile-pic-circular {
  width: 250px;
  height: 250px;
  background-repeat: no-repeat;
  background-size: 350px;
  background-position: 80% 50%;
  border-radius: 99em;
  border: 4px solid #eee;
  box-shadow: 0 3px 2px rgba(0, 0, 0, 0.3);
}

.user-page-content {
  font-size: 16px;

  h1 {
    text-align: center;
    border-bottom: none;
  }

  h3 {
    margin-bottom: 0;
  }

  .review p {
    font-size: 16px;
    padding-bottom: 32px;
  }
}



.user-page-content .nav {
  font-size: 32px;
  padding-bottom: 32px;
}

.following-message {
  color: white;
  font-size: 18px;
}

.unfollow {
  color: white;
  font-size: 14px;

  a {
    font-size: 18px;
  }
}

.user-list {
  list-style-type: none;
  padding-left: 0;

  div.user-profile-pic-circular {
    display: inline-block;
    background: gray;
    width: 64px;
    height: 64px;
    background-repeat: no-repeat;
    background-size: 90px;
    background-position: 80% 50%;
    border-width: 2px;
    box-shadow: 0 2px 1px rgba(0, 0, 0, 0.3);
  }

  .username {
    display: inline-block;
    height: 100px;
    vertical-align: middle;
    padding-left: 14px;
  }

  li {
    margin-bottom: -25px;
  }
}

.recommendation-list {
  list-style-type: none;
  padding-left: 0;

  li {
    padding-bottom: 14px;
  }
}
